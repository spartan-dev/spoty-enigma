<div>
  <div class="uk-card uk-card-default">
    <div class="uk-card-media-top">
      <img src={{images.0.url}} alt="{{name}}" width="100" height="100" />
    </div>
    <div class="uk-card-body">
      <h3 class="uk-card-title">{{name}}</h3>
      {{#if album_type}}
        <a
          href="/tracks/{{id}}"
          class="uk-button uk-button-danger"
        >ViewTracks</a>
      {{else}}
        <a
          href="/albums/{{id}}/{{name}}"
          class="uk-button uk-button-danger"
        >View Artists</a>
      {{/if}}
    </div>
  </div>
</div>